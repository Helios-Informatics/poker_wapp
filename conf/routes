# Routes

# This file defines all application routes (Higher priority routes first)

# https://www.playframework.com/documentation/latest/ScalaRouting

# ~~~~

# An example controller showing a sample home page

GET / controllers.PokerController.index()

# Game interaction routes

GET /newGame controllers.PokerController.newGame()
GET /bet/:x controllers.PokerController.bet(x: Int)
GET /allIn controllers.PokerController.allIn()
GET /fold controllers.PokerController.fold()
GET /call controllers.PokerController.call()
GET /check controllers.PokerController.check()
GET /restartGame controllers.PokerController.restartGame()
GET /get controllers.PokerController.getJson()

#Websocket
GET /websocket  controllers.HomeController.socket()

# Map static resources from the /public folder to the /assets URL path

GET /assets/*file controllers.Assets.versioned(path="/public", file: Asset)
