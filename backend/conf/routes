# Routes

# This file defines all application routes (Higher priority routes first)

# https://www.playframework.com/documentation/latest/ScalaRouting

# ~~~~

# An example controller showing a sample home page

# Game interaction routes

GET /get controllers.PokerController.getJson()
POST /bet/:x controllers.PokerController.bet(x: Int)
POST /allIn controllers.PokerController.allIn()
POST /fold controllers.PokerController.fold()
POST /call controllers.PokerController.call()
POST /check controllers.PokerController.check()
POST /restartGame controllers.PokerController.restartGame()
POST /leave controllers.PokerController.leave()

# lobby

GET /join controllers.PokerController.join()


# POST /changeName/:x controllers.PokerController.changeName(x: String)

# POST /changeSmallBlind/:x controllers.PokerController.changeSmallBlind(x: Int)

# POST /changeBigBlind/:x controllers.PokerController.changeBigBlind(x: Int)

POST /newGame controllers.PokerController.newGame()

# Websocket

GET /websocket controllers.PokerController.socket()

# Map static resources from the /public folder to the /assets URL path

GET /assets/*file controllers.Assets.versioned(path="/public", file: Asset)
